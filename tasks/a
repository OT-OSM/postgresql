---
- name: Install the client packages
  yum:
    name: "{{ item }}"
    state: present
    update_cache: yes
  with_items:
    - postgresql-contrib
    - postgresql-server

- name: Ensure PostgreSQL database is initialized.
  command: postgresql-setup initdb

- name: Enable the postgres service
  service:
    name: postgresql
    enabled: yes
  notify:
    - restart postgresql
